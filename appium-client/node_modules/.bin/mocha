#!/bin/sh
NODE_OPTIONS='--max_old_space_size=4096'
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../mocha/bin/mocha" "$@"
  ret=$?
else 
  node  "$basedir/../mocha/bin/mocha" "$@"
  ret=$?
fi
exit $ret
